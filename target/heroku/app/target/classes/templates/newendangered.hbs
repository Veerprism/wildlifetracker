<link href="enterpage.css" rel="stylesheet">

{{#partial "content"}}

    <form method="post" action="/newendangered">
        <h1>Enter new Endangered</h1>
        <input placeholder="Animal Name" name="name" type="text" required="">
        {{#each names}}
            <div class="dropdown-menu">
                <option class="dropdown-item" >{{names}}</option>
                <p>Okay</p>
            </div>
        {{/each}}
        <div class="form-group">
            <select class="form-control" name="endangered">
                <option selected disabled>These are the animals already available</option>
                {{#each animals}}
                    <option class="dropdown-item" value={{en_id}} name="normalid" >{{name}}</option>
                {{/each}}

            </select>
        </div>
        {{#if exists}}
            <p><strong>Animal already exists</strong></p>
        {{/if}}
        <button>Submit</button>
    </form>


{{/partial}}
{{> layout.hbs}}
