<link href="enterpage.css" rel="stylesheet">
<link href="bootstrap.css" rel="stylesheet">
<script src="main.js" type="text/javascript"></script>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
{{#partial "content"}}

    <form method="post" action="/sightingsnormalanimal">
        <h1>Normal Animal Sighting</h1>

        <div class="form-group">
            <select class="form-control dropdown-dark" name="location">
                <option selected disabled>Choose a Location</option>
                {{#each location}}
                    <option class="dropdown-item" value={{locationid}} name=locationid>{{place}}</option>
                {{/each}}
            </select>
        </div>


        <div class="form-group">
            <select class="form-control dropdown-dark" name="normal">
                <option selected disabled>Choose an Animal</option>
                    {{#each animals}}
                        <option class="dropdown-item" value={{normalid}} name="normalid" >{{name}}</option>
                    {{/each}}

            </select>
        </div>


        <div class="form-group">
            <select class="form-control dropdown-dark" name="rangers">
                <option selected disabled>Choose a Ranger</option>
                    {{#each rangers}}
                        <option class="dropdown-item" value={{rangerid}} name="rangerid">{{name}}</option>
                    {{/each}}

            </select>
        </div>





        <button>Submit</button>
    </form>

{{/partial}}
{{> layout.hbs}}
